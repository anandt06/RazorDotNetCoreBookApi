@page
@model BookListRazorCoreApp.Pages.BookList.IndexModel

<br/>
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Book Info</h2>
    </div>
    <div class="col-3">
        <a class="btn btn-info text-white" asp-page="Create">Create New Book</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.Books.Count() > 0)
            {
                <table class="table table-striped border">            
                    <tr class="table-secondary">
                        @*<th>
            <label asp-for="Books.FirstOrDefault().Id"></label>
        </th>*@
                        <th>
                            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
                        </th>
                        <th>
                            <label asp-for="Books.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                           
                        </th>
                    </tr>
                    @foreach (var item in Model.Books)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(s => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(s => item.Author)
                    </td>
                    <td>
                        <button class="btn btn-danger btn-sm" asp-page-handler="Delete" onclick="return confirm('Are you want to delete')" asp-route-id="@item.Id">Delete</button>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                    </td>
                </tr>
                    }
                </table>
            }
            else
            {
                <p> No books available</p>
            }
        </form>
    </div>
</div>